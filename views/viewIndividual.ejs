<% layout('templates/boilerplate') %>
    <h1>
        <%= event.name %>
    </h1>
    <div>Start time: <%= `${event.startTime}` %>
    </div>
    </div>
    <div>End time: <%= `${event.endTime}` %>
    </div>
    <div>
        <div>Description</div>
        <%= event.description %>
    </div>
    <a href="/<%= event._id %>/edit">Edit Event</a>
    <form action="/<%= event._id %>?_method=DELETE" method="post">
        <button type="submit">Delete</button>
    </form>