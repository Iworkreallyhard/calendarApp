<% layout('templates/boilerplate') %>
    <h1>Day View</h1>
    <div class="container">

        <% for(let i=0; i< 24; i++){ %>
            <div class="hour<%= i  %> row">
                <div class="col-1">
                    <%= i %>:00
                </div>

                <% for(let event of eventsOnDay){ %>
                    <% if(event.startTime.getHours()===i){ %>
                        <div class="col border">
                            <a href="/<%= event._id %>">
                                <%= event.name %>
                            </a>

                        </div>
                        <% } %>
                            <% } %>
            </div>
            <% } %>
    </div>